    <div class="wrapper row-offcanvas row-offcanvas-left">
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="left-side sidebar-offcanvas">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left info">
                        @if (HttpContext.Current.Request.Cookies[FormsAuthentication.FormsCookieName] == null)
                        {
                            <p>Not logged in</p>
                            <a href="#"><i class="fa fa-circle text-dark"></i> Offline</a>
                        }
                        else
                        {
                            <p>hello, @(new HtmlString(user.UserName))</p>
                            <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                        }
                    </div>
                </div>
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">
                    @if (HttpContext.Current.Request.Cookies[FormsAuthentication.FormsCookieName] == null)
                    {
                        <li>
                            <a href="/Home/Index">
                                <i class="fa fa-home"></i> <span>Home</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Users/Login">
                                <i class="fa fa-table"></i> <span>Sign in</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Books/Index">
                                <i class="fa fa-table"></i> <span>Book List</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        if (user.Role.Equals("user") == true)
                        {
                            <li>
                                <a href="/Home/Index">
                                    <i class="fa fa-home"></i> <span>Home</span>
                                </a>
                            </li>
                            <li>
                                <a href="/Books/Index">
                                    <i class="fa fa-table"></i> <span>Book List</span>
                                </a>
                            </li>
                        }
                        else if (user.Role.Equals("libraryadmin") == true)
                        {
                            <li>
                                <a href="/Home/Index">
                                    <i class="fa fa-home"></i> <span>Home</span>
                                </a>
                            </li>
                            <li>
                                <a href="/Books/BooksManage">
                                    <i class="fa fa-table"></i> <span>Books Manage</span>
                                </a>
                            </li>
