@using LibraryProject.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link href="~/favicon.ico?v=2" rel="shortcut icon" type="image/x-icon" />
    <title>NWPU Library System</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <!-- bootstrap 3.0.2 -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- font Awesome -->
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Ionicons -->
    <link href="~/Content/css/ionicons.min.css" rel="stylesheet" type="text/css" />
    <!-- Morris chart -->
    <link href="~/Content/css/morris/morris.css" rel="stylesheet" type="text/css" />
    <!-- jvectormap -->
    <link href="~/Content/css/jvectormap/jquery-jvectormap-1.2.2.css" rel="stylesheet" type="text/css" />
    <!-- fullCalendar -->
    <link href="~/Content/css/fullcalendar/fullcalendar.css" rel="stylesheet" type="text/css" />
    <!-- Daterange picker -->
    <link href="~/Content/css/daterangepicker/daterangepicker-bs3.css" rel="stylesheet" type="text/css" />
    <!-- bootstrap wysihtml5 - text editor -->
    <link href="~/Content/css/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="~/Content/css/AdminLTE.css" rel="stylesheet" type="text/css" />
    
    <!-- Kindeditor -->
    <link href="~/kindeditor/plugins/code/prettify.css" rel="stylesheet" type="text/css" />
    <script src="~/kindeditor/lang/zh_CN.js" type="text/javascript"></script>
    <script src="~/kindeditor/kindeditor-all.js" type="text/javascript"></script>
    <script src="~/kindeditor/kindeditor-all-min.js" type="text/javascript"></script>
    <script src="~/kindeditor/plugins/code/prettify.js" type="text/javascript"></script> 
    
    <!-- jQuery 2.0.2 -->
    <script src="~/Scripts/js/jquery.min.js"></script>
    <!-- jQuery UI 1.10.3 -->
    <script src="~/Scripts/js/jquery-ui-1.10.3.min.js" type="text/javascript"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    @Scripts.Render("http://cdn.datatables.net/1.10.15/js/jquery.dataTables.js")
    @Styles.Render("http://cdn.datatables.net/1.10.15/css/jquery.dataTables.css")

    @{ 
        User user = (User)CheckLogin.Instance.GetUser();
    }

    <script src="~/Scripts/jquery-form.js" type="text/javascript"></script>
    
</head>
<body class="skin-blue">
    <!-- header logo: style can be found in header.less -->
    <header class="header">
        <a href="/Home/Index" class="logo">
            <!-- Add the class icon to your logo image or logo icon to add the margining -->
            NWPU Library System
        </a>
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <div class="navbar-right">
                <ul class="nav navbar-nav">
                    <!-- User Account: style can be found in dropdown.less -->
                    <li class="dropdown user user-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            
                            
                            @if (HttpContext.Current.Request.Cookies[FormsAuthentication.FormsCookieName] == null) {
                                <span>
                                    <i class="fa fa-sign-in"></i>
                                    <label>Not logged in</label>
                                    <i class="caret"></i>
                                </span>
                            }
                            else
                            {
                                <i class="glyphicon glyphicon-user"></i>
                                <span>
                                    <label>@(new HtmlString(user.UserName))</label>
                                    <i class="caret"></i>
                                </span>
                            }
                                    
                                
                        </a>
                        <ul class="dropdown-menu">
                            <!-- User image -->
                            <li class="user-header bg-light-blue">
                                <p>
                                    Ariescc - Web Developer
                                    <small>Member since Sep. 2017</small>
                                </p>
                            </li>
                            <!-- Menu Footer-->
                            <li class="user-footer">
                                @if (HttpContext.Current.Request.Cookies[FormsAuthentication.FormsCookieName] != null)
                                {
                                    <div class="pull-left">
                                        <a href="/UserInfoes/PersonInfo" class="btn btn-default btn-flat">Profile</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="/Users/Logout" class="btn btn-default btn-flat">Sign out</a>
                                    </div>
                                }
                                else{ 
                                    <div class="pull-left">
                                        <a href="/Users/Login" class="btn btn-default btn-flat">Sign in</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="/Users/Create" class="btn btn-default btn-flat">Register</a>
                                    </div>
                                }
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="wrapper row-offcanvas row-offcanvas-left">
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="left-side sidebar-offcanvas">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left info">
                        @if (HttpContext.Current.Request.Cookies[FormsAuthentication.FormsCookieName] == null)
                        {
                            <p>Not logged in</p>
                            <a href="#"><i class="fa fa-circle text-dark"></i> Offline</a>
                        }
                        else
                        {
                            <p>hello, @(new HtmlString(user.UserName))</p>
                            <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                        }
                    </div>
                </div>
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">
                    @if (HttpContext.Current.Request.Cookies[FormsAuthentication.FormsCookieName] == null)
                    {
                        <li>
                            <a href="/Users/Login">
                                <i class="fa fa-sign-in"></i> <span>Sign in</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Home/Index">
                                <i class="fa fa-home"></i> <span>Home</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Articles/LatestNews">
                                <i class="fa fa-edit"></i> <span>Latest News</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Books/Index">
                                <i class="fa fa-table"></i> <span>Book List</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        if (user.Role.Equals("user") == true)
                        {
                            <li>
                                <a href="/Home/Index">
                                    <i class="fa fa-home"></i> <span>Home</span>
                                </a>
                            </li>
                            <li>
                                <a href="/UploadImages/Index">
                                    <i class="fa fa-picture-o"></i> <span>Photo</span> 
                                </a>
                            </li>
                            <li>
                                <a href="/Articles/LatestNews">
                                    <i class="fa fa-edit"></i> <span>Latest News</span>
                                </a>
                            </li>
                            <li>
                                <a href="/Books/Index">
                                    <i class="fa fa-table"></i> <span>Book List</span>
                                </a>
                            </li>
                            <li>
                                <a href="/UserInfoes/BorrowHistory">
                                    <i class="fa fa-table"></i> <span>Borrow History</span>
                                </a>
                            </li>
                            <li>
                                <a href="/UserInfoes/CurrentBorrow">
                                    <i class="fa fa-table"></i> <span>Current Borrow</span>
                                </a>
                            </li>
                        }
                        else if (user.Role.Equals("libraryadmin") == true)
                        {
                            <li>
                                <a href="/Home/Index">
                                    <i class="fa fa-home"></i> <span>Home</span>
                                </a>
                            </li>
                            <li>
                                <a href="/UploadImages/Index">
                                    <i class="fa fa-picture-o"></i> <span>photo</span>
                                </a>
                            </li>
                            <li>
                                <a href="/Articles/Index">
                                    <i class="fa fa-edit"></i> <span>Content Manage</span>
                                </a>
                            </li>
                            <li>
                                <a href="/Books/BooksManage">
                                    <i class="fa fa-table"></i> <span>Books Manage</span>
                                </a>
                            </li>
                            <li>
                                <a href="/BorrowAndReturns/Index">
                                    <i class="fa fa-table"></i> <span>Borrow Manage</span>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="/UploadImages/Index">
                                    <i class="fa fa-picture-o"></i> <span>Photo</span>
                                </a>
                            </li>
                            <li>
                                <a href="/Users/AdminIndex">
                                    <i class="fa fa-group"></i> <span>Libraryadmin Manage</span>
                                </a>
                            </li>
                        }
                    }
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>

        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">
            

            <!-- Main content -->
            <section class="content">
                @RenderBody()    
            </section><!-- /.content -->
        </aside><!-- /.right-side -->
    </div><!-- ./wrapper -->
   
    <!-- Bootstrap -->
    <script src="~/Scripts/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- Morris.js charts -->
    <script src="~/Scripts/js/raphael-min.js"></script>
    <script src="~/Scripts/js/plugins/morris/morris.min.js" type="text/javascript"></script>
    <!-- Sparkline -->
    <script src="~/Scripts/js/plugins/sparkline/jquery.sparkline.min.js" type="text/javascript"></script>
    <!-- jvectormap -->
    <script src="~/Scripts/js/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/js/plugins/jvectormap/jquery-jvectormap-world-mill-en.js" type="text/javascript"></script>
    <!-- fullCalendar -->
    <script src="~/Scripts/js/plugins/fullcalendar/fullcalendar.min.js" type="text/javascript"></script>
    <!-- jQuery Knob Chart -->
    <script src="~/Scripts/js/plugins/jqueryKnob/jquery.knob.js" type="text/javascript"></script>
    <!-- daterangepicker -->
    <script src="~/Scripts/js/plugins/daterangepicker/daterangepicker.js" type="text/javascript"></script>
    <!-- Bootstrap WYSIHTML5 -->
    <script src="~/Scripts/js/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js" type="text/javascript"></script>
    <!-- iCheck -->
    <script src="~/Scripts/js/plugins/iCheck/icheck.min.js" type="text/javascript"></script>

    <!-- AdminLTE App -->
    <script src="~/Scripts/js/AdminLTE/app.js" type="text/javascript"></script>

    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/Scripts/js/AdminLTE/dashboard.js" type="text/javascript"></script>
    <footer class="card-footer"><strong>CopyRight&copy; 2017</strong> Ariescc 
        <div class="pull-right">
            Version 1.2
        </div>
    </footer>
</body>

</html>